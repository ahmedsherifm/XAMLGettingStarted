<UserControl
    x:Class="WiredBrainCoffee.CustomersApp.Controls.CustomerDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WiredBrainCoffee.CustomersApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <StackPanel>
        <TextBox
            x:Name="txtFirstname"
            Margin="10"
            Header="Firstname"
            TextChanged="TextBox_TextChanged" />
        <TextBox
            x:Name="txtLastname"
            Margin="10"
            Header="Lastname"
            TextChanged="TextBox_TextChanged" />
        <CheckBox
            x:Name="chkIsDeveloper"
            Margin="10"
            Checked="CheckBox_IsCheckedChanged"
            Content="Is Developer"
            Unchecked="CheckBox_IsCheckedChanged" />
    </StackPanel>

</UserControl>
