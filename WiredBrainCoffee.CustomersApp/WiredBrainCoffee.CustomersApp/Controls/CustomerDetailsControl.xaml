<UserControl
    x:Class="WiredBrainCoffee.CustomersApp.Controls.CustomerDetailsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WiredBrainCoffee.CustomersApp.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style
            x:Key="myCustomTextBoxStyle"
            BasedOn="{StaticResource myTextBoxStyle}"
            TargetType="TextBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="CornerRadius" Value="0" />
        </Style>
    </UserControl.Resources>

    <StackPanel>
        <TextBox
            Header="Firstname"
            Style="{StaticResource myCustomTextBoxStyle}"
            Text="{x:Bind Customer.Firstname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            Header="Lastname"
            Style="{StaticResource myTextBoxStyle}"
            Text="{x:Bind Customer.Lastname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <CheckBox
            Margin="10"
            Content="Is Developer"
            IsChecked="{x:Bind Customer.IsDeveloper, Mode=TwoWay}" />
    </StackPanel>

</UserControl>
